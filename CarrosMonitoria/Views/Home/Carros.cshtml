@model IEnumerable<CarrosMonitoria.Models.CadastrarCarro>

<head>
    <link rel="stylesheet" href="~/css/carros.css">
</head>

<header>
    <nav class="navbar navbar-light">
        <a asp-action="Index">Home</a>
        <a asp-action="Carros">Carros</a>
        <a asp-action="Cadastro">Cadastro</a>
        <a asp-action="Contato">Contato</a>
        <a asp-action="Compras">Compras</a>
    </nav>

    <div id="carousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carousel" data-slide-to="0" class="active"></li>
            <li data-target="#carousel" data-slide-to="1"></li>
            <li data-target="#carousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/car-gea83457b6_1280.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/images/car-g24c6c8ce5_1280.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/images/car-gbeabd3774_1280.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</header>

<main class="container">
    <h2 class="text-center my-4">Carros</h2>
    <div class="divCarros">
        <ul class="list-group">
            @foreach (var carro in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <p>@carro.Nome_Carro</p>
                    <p>@carro.Ano</p>
                    <p>R$@carro.Preco</p>
                    <div class="divOptions">
                        <a asp-action="EditarCarro" asp-route-id="@carro.Id_Carro" ><span class="badge"><i class="bi bi-pencil-square"></i></span></a>
                        <a asp-action="DeletarCarro" asp-route-id="@carro.Id_Carro"><span class="badge"><i class="bi bi-trash"></i></span></a>
                    </div>
                </li>
            }
        </ul>
    </div>
</main>