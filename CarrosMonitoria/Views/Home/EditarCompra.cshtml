<head>
    <link rel="stylesheet" href="~/css/editarCompra.css">
</head>

<header>
    <nav class="navbar navbar-light">
        <a asp-action="Index">Home</a>
        <a asp-action="Carros">Carros</a>
        <a asp-action="Cadastro">Cadastro</a>
        <a asp-action="Contato">Contato</a>
        <a asp-action="Compras">Compras</a>
    </nav>
</header>

<main class="container">
    <h2 class="text-center my-4">Editar Compra</h2>
    <div class="divCompra text-center">
        <form action="" method="post">
            <div class="row">
                <div class="col-12 col-sm">
                    <div class="form-group">
                        <label for="email">Id</label>
                        <input type="number" class="form-control" disabled>
                    </div>
                    <div class="form-group">
                        <label>Nome</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Email</label>
                        <input type="email" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Endereço</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Carro</label>
                        <select class="form-control" required>
                            <option>Camaro</option>
                            <option>Porsche Carreira</option>
                            <option>Bugatti</option>
                            <option>GTR</option>
                            <option>Audi R8</option>
                        </select>
                    </div>
                    <button type="submit" class="btnAtualizar">Atualizar</button>
                </div>
            </div>
        </form>
    </div>
</main>